<div id="showCmp">
  <audio id="audio" src="<%= @res.transcription_job.media.media_file_uri %>" controls></audio>
  <% idx = 0 %>
  <% @transcript["results"]["speaker_labels"]["segments"].each do |seg| %>
    <div class="speak <%= seg["speaker_label"] %>">
      <div class="who" data="<%= seg["start_time"] %>">
        <%= seg["speaker_label"] %>
      </div>
      <div class="said">
<% seg["items"].each_with_index do |item, i| %><% loop do %><% if @transcript["results"]["items"][idx]["start_time"] %><span class="word"><%= @transcript["results"]["items"][idx]["alternatives"][0]["content"] %></span><%= " " if @res["transcription_job"]["language_code"] == "en-US" && i != seg["items"].length - 1 %><% idx += 1 %><% break %><% end %><% idx += 1 %><% end %><% end %><span class="last"><%= @res["transcription_job"]["language_code"] == "en-US" ? "." : "ã€‚" %></span>
      </div>
    </div>
  <% end %>
</div>
